@page
@model GrooveGalleryWebApp.Pages.CreateModel;


<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Inclusão de Álbum</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Album.Nome" class="control-label"></label>
                <input asp-for="Album.Nome" class="form-control" />
                <span asp-validation-for="Album.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Album.Descricao" class="control-label"></label>
                <input asp-for="Album.Descricao" class="form-control" />
                <span asp-validation-for="Album.Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Album.ImagemUri" class="control-label"></label>
                <input asp-for="Album.ImagemUri" class="form-control" />
                <span asp-validation-for="Album.ImagemUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Album.Preco" class="control-label"></label>
                <input asp-for="Album.Preco" class="form-control" />
                <span asp-validation-for="Album.Preco" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <input class="form-check-input" asp-for="Album.EntregaExpressa" />
                <label asp-for="Album.EntregaExpressa" style="margin-left: 15px"></label>
            </div>

            <div class="form-group">
                <label asp-for="Album.DataCadastro" class="control-label"></label>
                <input asp-for="Album.DataCadastro" class="form-control" />
                <span asp-validation-for="Album.DataCadastro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Album.Artista" class="control-label"></label>
                <input asp-for="Album.Artista" class="form-control" />
                <span asp-validation-for="Album.Artista" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Album.Duracao" class="control-label"></label>
                <input asp-for="Album.Duracao" class="form-control" />
                <span asp-validation-for="Album.Duracao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Album.DataLancamento" class="control-label"></label>
                <input asp-for="Album.DataLancamento" class="form-control" />
                <span asp-validation-for="Album.DataLancamento" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <label asp-for="Album.MarcaId" class="control-label"></label>

                <select class="form-select"
                        asp-for="Album.MarcaId"
                        asp-items="Model.MarcaOptionItems">
                    <option value="">Selecione uma opção</option>
                </select>

                <span asp-validation-for="Album.MarcaId" class="text-danger">
                </span>
            </div>


            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
    


